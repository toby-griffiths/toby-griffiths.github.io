---
layout: default
title: Home
generator: pagination
pagination:
max_per_page: 3
use:
- posts
---
{% import 'taxonomy.twig' as tax %}
{% for post in page.pagination.items %}
    <article>
        <header>
            <h2><a href="{{ site.url }}{{ post.url }}">{{ post.title }}</a></h2>
        </header>
        <div>
            {% if post.abstract is not empty %}
                <p>{{ post.abstract }}</p>
                <div><a href="{{ site.url }}{{ post.url }}">read more</a></div>
            {% else %}
                {{ post.blocks.content|raw }}
            {% endif %}
        </div>
        {{ tax.categories_list(post.meta.categories|default([])) }}
        {{ tax.tags_list(post.meta.tags|default([])) }}
    </article>
{% endfor %}
{% if page.pagination.previous_page or page.pagination.next_page %}
    <nav>
        {% if page.pagination.previous_page %}<a href="{{ site.url }}{{ page.pagination.previous_page.url }}">Newer Posts</a>{% endif %}<br />
        {% if page.pagination.next_page %}<a href="{{ site.url }}{{ page.pagination.next_page.url }}">Older Posts</a>{% endif %}<br />
    </nav>
{% endif %}
